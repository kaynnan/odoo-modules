<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="customer_loyalty.LoyaltyCard">
        <div class="o_loyalty_card my-3">
            <t t-if="props.loading">
                <div class="d-flex align-items-center justify-content-center p-4 text-muted">
                    <i class="fa fa-circle-o-notch fa-spin me-2"/>
                    <span>Loading program...</span>
                </div>
            </t>
            <t t-else="">
                <div class="card border-0 shadow-sm overflow-hidden o_loyalty_card_bg">
                    <div class="card-body text-white p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="text-uppercase opacity-75 fw-bold mb-1" style="letter-spacing: 1px;">
                                    <i class="fa fa-star me-2 text-warning"/>Balance
                                </h5>
                                <div class="d-flex align-items-baseline">
                                    <h1 class="display-4 fw-bold mb-0 me-2">
                                        <t t-esc="Math.floor(props.points)"/>
                                    </h1>
                                    <span class="fs-5 opacity-75">pts</span>
                                </div>
                            </div>
                            <div class="text-end">
                                <div class="badge rounded-pill px-4 py-2 shadow-sm d-flex align-items-center gap-2"
                                     t-att-style="'background-color: ' + currentLevelInfo.color + '; color: #fff;'">
                                    <i class="fa fa-trophy fs-5"/>
                                    <span class="fs-5 fw-bold text-uppercase">
                                        <t t-esc="currentLevelInfo.name"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-4 pt-3 border-top border-white-50 opacity-75">
                            <t t-foreach="props.levels" t-as="level" t-key="level.id">
                                <div class="col text-center border-end border-white-50 last-border-0">
                                    <small class="d-block text-uppercase fw-bold" style="font-size: 0.75rem;">
                                        <t t-esc="level.name"/>
                                    </small>
                                    <span class="fw-bold">
                                        <t t-esc="Math.floor(level.min_points)"/>+
                                    </span>
                                </div>
                            </t>
                            <div t-if="props.levels.length === 0" class="col text-center">
                                <small>No configuration found</small>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>