<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_loyalty_level_search" model="ir.ui.view">
        <field name="name">loyalty.level.search</field>
        <field name="model">loyalty.level</field>
        <field name="arch" type="xml">
            <search string="Loyalty Levels">
                <field name="name"/>
                <field name="min_points"/>
                <separator/>
                <filter string="Has Email Template" name="with_template" domain="[('email_template_id', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Email Template" name="group_template" domain="[]" context="{'group_by': 'email_template_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_loyalty_level_tree" model="ir.ui.view">
        <field name="name">loyalty.level.tree</field>
        <field name="model">loyalty.level</field>
        <field name="arch" type="xml">
            <list string="Loyalty Levels" 
                  default_order="min_points asc" 
                  editable="bottom" 
                  multi_edit="1" 
                  sample="1">
                <field name="name"/>
                <field name="min_points"/>
                <field name="email_template_id" placeholder="Optional email..."/>
            </list>
        </field>
    </record>

    <record id="view_loyalty_level_form" model="ir.ui.view">
        <field name="name">loyalty.level.form</field>
        <field name="model">loyalty.level</field>
        <field name="arch" type="xml">
            <form string="Loyalty Level">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g. Platinum"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="min_points"/>
                        </group>
                        <group>
                            <field name="email_template_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_loyalty_level" model="ir.actions.act_window">
        <field name="name">Loyalty Levels</field>
        <field name="res_model">loyalty.level</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_loyalty_level_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new Loyalty Level
            </p>
            <p>
                Set thresholds (e.g., 1000 points) and automatic email templates
                to reward your most loyal customers.
            </p>
        </field>
    </record>

</odoo>