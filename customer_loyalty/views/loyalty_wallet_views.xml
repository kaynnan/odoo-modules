<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_loyalty_wallet_search" model="ir.ui.view">
        <field name="name">loyalty.wallet.search</field>
        <field name="model">loyalty.wallet</field>
        <field name="arch" type="xml">
            <search string="Loyalty Wallets">
                <field name="name"/>
                <field name="partner_id"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Positive Balance" name="positive_points" domain="[('points', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_loyalty_wallet_tree" model="ir.ui.view">
        <field name="name">loyalty.wallet.tree</field>
        <field name="model">loyalty.wallet</field>
        <field name="arch" type="xml">
            <list string="Loyalty Wallets" 
                  decoration-muted="not active" 
                  sample="1"
                  multi_edit="1">
                <field name="name"/>
                <field name="partner_id" widget="many2one_avatar"/>
                <field name="points" sum="Total Points" decoration-bf="1"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_loyalty_wallet_form" model="ir.ui.view">
        <field name="name">loyalty.wallet.form</field>
        <field name="model">loyalty.wallet</field>
        <field name="arch" type="xml">
            <form string="Loyalty Wallet">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" widget="boolean_toggle"/>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g. Main Wallet"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="points" decoration-bf="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Transactions" name="transactions">
                            <field name="line_ids">
                                <list string="Point Transactions" 
                                      editable="bottom"
                                      create="groups='customer_loyalty.group_loyalty_card_manager'"
                                      delete="groups='customer_loyalty.group_loyalty_card_manager'"
                                      default_order="create_date desc">
                                    <field name="create_date" readonly="1"/>
                                    <field name="sale_order_id" readonly="1" widget="many2one"/>
                                    <field name="description" required="1"/>
                                    <field name="points" sum="Total" decoration-bf="1" 
                                           decoration-success="points &gt; 0" 
                                           decoration-danger="points &lt; 0"/>
                                    <field name="create_uid" widget="many2one_avatar_user" optional="hide"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_loyalty_wallet" model="ir.actions.act_window">
        <field name="name">Loyalty Wallets</field>
        <field name="res_model">loyalty.wallet</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_loyalty_wallet_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new loyalty wallet
            </p>
            <p>
                Manage customer point balances and transaction history.
            </p>
        </field>
    </record>

</odoo>